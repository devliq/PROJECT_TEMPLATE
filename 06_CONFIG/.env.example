# =============================================================================
# PROJECT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment.
# Never commit the .env file to version control.

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application basic information
APP_NAME=My Project
APP_VERSION=1.0.0
APP_DESCRIPTION=A comprehensive project template

# Environment settings
# Options: development, staging, production
APP_ENV=development

# Server configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Application URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myproject_db
DB_USER=user
DB_PASS=password

# Database connection options
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# Database URL (alternative to individual settings above)
# DATABASE_URL=postgresql://user:password@localhost:5432/myproject_db

# Redis configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# External API settings
API_BASE_URL=https://api.example.com
API_KEY=your_api_key_here
API_TIMEOUT=5000
API_RETRY_ATTEMPTS=3
API_RATE_LIMIT=100

# Third-party service APIs
GOOGLE_API_KEY=your_google_api_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT configuration
JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session configuration
SESSION_SECRET=your_session_secret_here_change_this_in_production
SESSION_MAX_AGE=86400000

# OAuth providers (uncomment and configure as needed)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Password hashing
BCRYPT_ROUNDS=12

# CORS configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security headers
SECURITY_HELMET_ENABLED=true
CSP_ENABLED=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level options: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json

# Log output destinations
LOG_FILE=logs/app.log
LOG_CONSOLE=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# External logging services
# LOGDNA_KEY=your_logdna_key
# PAPERTRAIL_HOST=logs.papertrailapp.com
# PAPERTRAIL_PORT=12345

# =============================================================================
# FILE STORAGE & ASSETS
# =============================================================================

# File upload settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cloud storage (choose one)
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=myproject-bucket

# Cloudinary
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Local storage path
UPLOAD_PATH=uploads/

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Email service providers (alternative to SMTP)
# SENDGRID_API_KEY=your_sendgrid_api_key
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_domain.com

# Email templates and settings
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Project

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =============================================================================
# FEATURE FLAGS & EXPERIMENTAL FEATURES
# =============================================================================

# Core features
DEBUG=true
CACHE_ENABLED=true
COMPRESSION_ENABLED=true

# Optional features
ANALYTICS_ENABLED=false
NOTIFICATIONS_ENABLED=true
SEARCH_ENABLED=true
MULTI_TENANT_ENABLED=false

# Experimental features (use with caution)
BETA_FEATURES_ENABLED=false
PREVIEW_MODE=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development tools
DEV_TOOLS_ENABLED=true
API_DOCS_ENABLED=true
SWAGGER_ENABLED=true

# Debugging
DEBUG_MODE=true
VERBOSE_LOGGING=false
PERFORMANCE_MONITORING=true

# Hot reload
HOT_RELOAD_ENABLED=true
WATCH_POLLING=false

# =============================================================================
# EXTERNAL SERVICES & INTEGRATIONS
# =============================================================================

# Webhooks
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=10000

# Queue systems
# REDIS_QUEUE_ENABLED=true
# RABBITMQ_URL=amqp://localhost

# Cache settings
CACHE_TTL=3600
CACHE_PREFIX=myproject

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Docker settings
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=default
K8S_DEPLOYMENT_NAME=myproject-app

# Cloud provider settings
# AWS_REGION=us-east-1
# GCP_PROJECT_ID=your-gcp-project
# AZURE_SUBSCRIPTION_ID=your-subscription-id

# Load balancer
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=30

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Database backups
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION=7

# Log rotation
LOG_ROTATION_ENABLED=true
LOG_ROTATION_MAX_SIZE=10m
LOG_ROTATION_MAX_FILES=5

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Caching
CACHE_DRIVER=redis
CACHE_DEFAULT_TTL=3600

# Compression
GZIP_ENABLED=true
BROTLI_ENABLED=false

# CDN
CDN_ENABLED=false
CDN_URL=https://cdn.example.com

# Database optimization
DB_CONNECTION_POOL_SIZE=10
DB_STATEMENT_CACHE_SIZE=100

# Memory limits
MEMORY_LIMIT=512m
HEAP_SIZE=256m

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test environment settings
TEST_DB_NAME=myproject_test
TEST_LOG_LEVEL=error
TEST_PARALLEL=true

# Test coverage
COVERAGE_ENABLED=true
COVERAGE_THRESHOLD=80
COVERAGE_REPORT_FORMAT=html,lcov

# E2E testing
E2E_ENABLED=true
E2E_BROWSER=chrome
E2E_HEADLESS=true

# =============================================================================
# LEGACY & DEPRECATED SETTINGS
# =============================================================================
# These settings are kept for backward compatibility
# Consider migrating to newer alternatives

# LEGACY_API_ENDPOINT=https://legacy-api.example.com
# LEGACY_FEATURE_ENABLED=false