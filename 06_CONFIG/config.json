{
  "app": {
    "name": "My Project",
    "version": "1.0.0",
    "environment": "${NODE_ENV}"
  },
  "database": {
    "host": "${DB_HOST}",
    "port": 5432,
    "name": "${DB_NAME}",
    "username": "${DB_USERNAME}",
    "password": "${DB_PASSWORD}"
  },
  "api": {
    "baseUrl": "${API_BASE_URL}",
    "timeout": 5000,
    "retries": 3
  },
  "logging": {
    "level": "info",
    "file": "logs/app.log",
    "maxSize": "10m",
    "maxFiles": 5
  },
  "features": {
    "debug": true,
    "cache": true,
    "analytics": false
  },
  "environments": {
    "development": {
      "database": {
        "host": "localhost",
        "name": "myproject_dev"
      },
      "api": {
        "baseUrl": "https://dev-api.example.com"
      }
    },
    "production": {
      "database": {
        "host": "prod-db.example.com",
        "name": "myproject_prod"
      },
      "api": {
        "baseUrl": "https://api.example.com"
      }
    }
  },
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "app": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "environment": { "type": "string" }
        },
        "required": ["name", "version"]
      },
      "database": {
        "type": "object",
        "properties": {
          "host": { "type": "string" },
          "port": { "type": "integer" },
          "name": { "type": "string" },
          "username": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["host", "port", "name", "username", "password"]
      }
    },
    "required": ["app", "database"]
  }
}
