{
  "name": "Project Template Security Configuration",
  "version": "1.0.0",
  "description": "Security scanning and vulnerability assessment configuration",

  "npm": {
    "audit": {
      "level": "moderate",
      "production": true,
      "json": false
    }
  },

  "eslint": {
    "security": {
      "enabled": true,
      "plugins": ["security"],
      "rules": {
        "security/detect-buffer-noassert": "error",
        "security/detect-child-process": "warn",
        "security/detect-disable-mustache-escape": "error",
        "security/detect-eval-with-expression": "error",
        "security/detect-new-buffer": "error",
        "security/detect-no-csrf-before-method-override": "error",
        "security/detect-non-literal-fs-filename": "warn",
        "security/detect-non-literal-regexp": "warn",
        "security/detect-non-literal-require": "error",
        "security/detect-object-injection": "error",
        "security/detect-possible-timing-attacks": "error",
        "security/detect-pseudoRandomBytes": "error",
        "security/detect-unsafe-regex": "error"
      }
    }
  },

  "scanning": {
    "schedule": "weekly",
    "automated": true,
    "failOnHighSeverity": true,
    "reportFormat": "json",
    "outputDirectory": "reports/security"
  },

  "vulnerability": {
    "severityThresholds": {
      "critical": 0,
      "high": 0,
      "moderate": 5,
      "low": 10,
      "info": 20
    },
    "ignorePatterns": ["node_modules/**", "build/**", "dist/**", "coverage/**"]
  },

  "dependencies": {
    "allowList": [],
    "blockList": ["vulnerable-package-name"],
    "trustedRegistries": ["https://registry.npmjs.org/"]
  },

  "secrets": {
    "scanEnabled": true,
    "patterns": ["password", "secret", "token", "key", "credential"],
    "excludePaths": ["node_modules/**", ".git/**", "build/**", "dist/**"]
  },

  "codeAnalysis": {
    "enabled": true,
    "rules": {
      "sqlInjection": "error",
      "xss": "error",
      "commandInjection": "error",
      "pathTraversal": "error",
      "insecureRandom": "warn",
      "weakCrypto": "warn",
      "deserialization": "error",
      "hardcodedSecrets": "error",
      "openRedirect": "error",
      "csrf": "error"
    }
  },

  "remediation": {
    "sqlInjection": "Use parameterized queries or ORM to prevent SQL injection",
    "xss": "Sanitize user input and implement Content Security Policy (CSP)",
    "commandInjection": "Validate and sanitize input, use safe APIs",
    "pathTraversal": "Validate file paths, use allowlists",
    "insecureRandom": "Use cryptographically secure random number generators",
    "weakCrypto": "Use strong encryption algorithms and key sizes",
    "deserialization": "Validate input data, use safe deserialization libraries",
    "hardcodedSecrets": "Store secrets in environment variables or secure vaults",
    "openRedirect": "Validate redirect URLs against allowlist",
    "csrf": "Implement CSRF tokens and validate requests"
  },

  "monitoring": {
    "enabled": true,
    "alerts": {
      "newVulnerabilities": true,
      "severityChanges": true,
      "dependencyUpdates": true
    },
    "notificationChannels": ["console", "email"]
  },

  "compliance": {
    "standards": [
      "OWASP Top 10",
      "NIST Cybersecurity Framework",
      "ISO 27001",
      "PCI DSS",
      "HIPAA"
    ],
    "requiredChecks": [
      "dependency_scanning",
      "secret_detection",
      "code_analysis",
      "container_scanning",
      "infrastructure_scanning"
    ],
    "reporting": {
      "frequency": "monthly",
      "format": ["json", "html", "pdf"],
      "recipients": ["security@company.com"],
      "automated": true
    }
  },

  "reports": {
    "generate": true,
    "format": ["json", "html", "pdf"],
    "retention": {
      "days": 90,
      "maxReports": 50
    }
  }
}
