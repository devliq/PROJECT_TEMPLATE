{
  "name": "project-template",
  "version": "1.0.1",
  "description": "A comprehensive project template with modern tooling",
  "main": "src/index.ts",
  "scripts": {
    "start": "node src/index.js",
    "start:ts": "ts-node src/index.ts",
    "dev": "nodemon src/index.js",
    "dev:ts": "nodemon --exec ts-node src/index.ts",
    "build": "npm run lint && npm run test && npm run build:ts && echo 'Build completed'",
    "build:ts": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "node scripts/smoke-test.js",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint --fix 'src/**/*.{js,ts}'",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:ts": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,json}'",
    "security": "npm run security:audit && npm run security:lint && npm run security:check",
    "security:audit": "npm audit --audit-level moderate",
    "security:lint": "eslint --plugin security 'src/**/*.{js,ts}'",
    "security:check": "echo 'üîç Running comprehensive security checks...' && npm run security:audit && npm run security:lint && echo '‚úÖ Security checks completed'",
    "security:fix": "npm audit fix",
    "dependency-review": "echo 'Dependency review should be handled by GitHub Actions workflow'",
    "typecheck": "tsc --noEmit",
    "prepare": "npx --no-install husky install || true"
  },
  "keywords": [
    "template",
    "project",
    "nodejs",
    "javascript",
    "development"
  ],
  "author": "Project Template Team <team@projecttemplate.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/project-template/project-template.git"
  },
  "bugs": {
    "url": "https://github.com/project-template/project-template/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/project-template"
  },
  "dependencies": {
    "@google/gemini-cli": "^0.2.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "superagent": "^10.2.3",
    "typescript-eslint": "^8.41.0",
    "undici": "^7.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.0",
    "prettier": "3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^10.4.5"
  },
  "engines": {
    "node": ">=20.17.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "./node_modules/.bin/eslint --fix --max-warnings 10",
      "./node_modules/.bin/prettier --write"
    ],
    "*.{json,md}": [
      "./node_modules/.bin/prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testEnvironmentOptions": {
      "url": "http://jestjs.io/"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts",
      "!src/**/*.test.js",
      "!src/**/*.test.ts",
      "!src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [],
    "coverageProvider": "v8",
    "transformIgnorePatterns": [],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).js",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFilesAfterEnv": [],
    "testTimeout": 10000
  }
}
